{
  "compilerOptions": {
    "target": "ES2020",
    "module": "commonjs",
    "lib": [
      "es2020"
    ],
    "declaration": true,
    "strict": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noImplicitThis": true,
    "alwaysStrict": true,
    "noUnusedLocals": false,
    "noUnusedParameters": false,
    "noImplicitReturns": true,
    "noFallthroughCasesInSwitch": false,
    "inlineSourceMap": true,
    "inlineSources": true,
    "experimentalDecorators": true,
    "strictPropertyInitialization": false,
    "typeRoots": [
      "./node_modules/@types"
    ],
    "baseUrl": "./",
    "paths": {
      "/opt/nodejs/productsLayer": [
        "src/lambda/products/layers/productsLayer/nodejs/ProductRepository"
      ],
      "/opt/nodejs/productsEventsLayer": [
        "src/lambda/products/layers/productsEventsLayer/nodejs/ProductEvent"
      ],
      "/opt/nodejs/ordersLayer": [
        "src/lambda/orders/layers/ordersLayer/nodejs/OrderRepository"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "cdk.out"
  ]
}